{{ form_start(form) }}
<div class="row">
    <div class="col-lg-12 form-group">
        <h3>{{ user.firstname ~ " " ~ user.lastname }}</h3>
    </div>
    <div class="col-lg-12 form-group">
        {{ form_label(form.chantier, 'Chantier') }}
        {{ form_row(form.chantier) }}
    </div>
    <div class="col-lg-12 form-group">
        {{ form_label(form.text, 'Note') }}
        {{ form_row(form.text) }}
        <div class="dd-menu active" id="dd-menu">
            <ul>
                <li>
                    <a href="javascript:void(0)" data-id="images" class="add-images-note" data-toggle="tooltip" data-placement="left" title="Image">
                        <span class="material-icons md-18">image</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-12 form-group">
        <button class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
    </div>
</div>
{{ form_end(form) }}
