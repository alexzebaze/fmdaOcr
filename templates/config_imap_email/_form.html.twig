    #banque_logo{display: none;}
    .img-load{display: block;margin: auto;max-width: 201px;}
    label[for=banque_logo]{cursor: pointer;}
</style>

{{ form_start(form) }}
<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-6 form-group">
                    {{ form_label(form.hote, 'Hote') }}
                    {{ form_row(form.hote, {'attr':{'placeholder':'Ex: imap.gmail.com:993'}}) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_row(form.email) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_row(form.password) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_label(form.dossier, 'Dossier') }}
                    {{ form_row(form.dossier) }}
                </div>
            </div>

            <div class="row">
            	<div class="col-lg-3 form-group">
                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>

