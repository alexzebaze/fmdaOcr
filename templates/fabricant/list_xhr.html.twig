<style type="text/css">
    <style type="text/css">        
        .rounded-img {
            border-radius: 50%;
            position: relative;
            z-index: 1;
            width: 40px;
            height: 40px;
            object-fit: cover;
            transition: easy 0.4s all;
        }
    </style>
</style>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for fabricant in fabricants %}
            <tr>
                <td>
                    {% if fabricant.logo %}
                        <img data-file="/uploads/fabricant/{{fabricant.logo}}" src="/uploads/fabricant/{{fabricant.logo}}" class="showDocument rounded-img">
                    {% endif %}
                </td>
                <td>{{ fabricant.nom }}</td>
                <td>
                    <div style="display: flex;">
                        <a onclick="loadFabricantForm('{{fabricant.id}}')" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>