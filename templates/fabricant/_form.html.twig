<style type="text/css">
    #banque_logo{display: none;}
    .img-load{margin: auto;max-width: 111px;}
    label[for=banque_logo]{cursor: pointer;}
</style>

{{ form_start(form) }}
<div class="">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <input type="hidden" name="fabricant_id" value="{{fabricant.id is not null ? fabricant.id : ''}}">
                <div class="col-lg-12 form-group">
                    {{ form_label(form.nom, 'Nom') }}
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-sm-12 form-group">
                    {{ form_row(form.logo) }}
                    {% if fabricant.logo %}
                    	{% set logo = '/uploads/fabricant/'~fabricant.logo  %}
	                    <label for="banque_logo" style="display: block;margin-top: 25px;">
	                        <img src="{{logo}}" class="img-load">
	                    </label>
                    {% endif %}
                </div>

            </div>

            <div class="row">
            	<div class="col-lg-3 form-group">
                    <button class="btn btn-primary submit">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}
