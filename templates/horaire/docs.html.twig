<table class="table">
	{% for doc in docs %}
	<tr>
		<td style="vertical-align: middle;">
			{% if doc.extension in ["png","jpeg","gif","jpg"] %}
				<img src="{{ doc.url }}" style="width: 8rem">
			{% elseif doc.extension in ["pdf"] %}
				<img data-pdf-thumbnail-file="{{ doc.url }}" src="{{ asset('images/pdf.png') }}" style="width: 8rem">
			{% endif %}
		</td>
	    <td style="vertical-align: middle;">{{ doc.nom }}</td>
	    <td style="vertical-align: middle;width: 20%;">
	    	<a href="{{ doc.url }}" class="view-doc"><i class="fas fa-eye"></i> Voir</a> 
	    	<a href="{{ path('galerie_download', {'fileid': doc.id}) }}" target="_blank"><i class="fas fa-download"></i> Télécharger</a> 
	    	<a href="{{ path('horaire_delete_galerie', {'user_id':uid, 'galerie_id':doc.id}) }}" class="delete-doc"><i class="fas fa-trash-alt"></i></a>
	    </td>
	</tr>
	{% else %}
	<tr>
		<td>Aucune fiche de paie disponible pour le moment</td>
	</tr>
	{% endfor %}
</table>