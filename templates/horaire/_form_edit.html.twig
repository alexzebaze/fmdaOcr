{{ form_start(form) }}
<div class="row">
    <div class="col-lg-12 form-group">
        <h3>{{ user.firstname ~ " " ~ user.lastname }}</h3>
    </div>
    <div class="col-lg-12 form-group">
        {{ form_label(form.time, 'Nb Heures') }}
        {{ form_row(form.time) }}
    </div>
    <div class="col-lg-12 form-group">
        {{ form_label(form.chantierid, 'Chantier') }}
        {{ form_row(form.chantierid) }}
    </div>
    <div class="col-lg-12 form-group">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
</div>
{{ form_end(form) }}
