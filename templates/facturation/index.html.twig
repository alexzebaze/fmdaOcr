        $('.btnAttachDevis').click(function(){
            $('#modalDevis').modal('show');
            $('.loader-container').css('display','flex');
            $eltCheck = $('.check-fc:checkbox:checked');
            $chantierList = [];   
            $eltSelect = [];
            $fournisseursSelect = [];
            $eltCheck.each(function( index ) {
                if($( this ).val() != ""){
                    $chantierList.push($( this ).attr('data-chantier'));
                    $eltSelect.push($( this ).val());
                    $fournisseursSelect.push($( this ).attr('data-fournisseur'));
                }
            });
            $chantierList = $chantierList.join('-');
            $eltSelect = $eltSelect.join('-');
            $fournisseursSelect = $fournisseursSelect.join('-');
            openDevisXhr($chantierList, $eltSelect, $fournisseursSelect);
        })

        function openDevisXhr($chantierList, $eltSelect, $fournisseursSelect){
            console.log($fournisseursSelect);
            $.ajax({
                url: "{{path('devis_pro_get_by_chantier')}}",
                type: "POST",
                dataType: "json",
                async: true,
                data: {
                    list_chantier_id: $chantierList,
                    page: 'facturation',
                    type:'devis_pro',
                    facture_select: $eltSelect,
                    fournisseurs_select: $fournisseursSelect
                },
                success: function(response) {
                    if(response.status == 200){                        
                        $('#listDevisContainer').html(response.content);
                    }
                    else if(response.status == 500){
                        toastr.error(response.message);
                    }
                    $('.loader-container').css('display','none');
                },
                error: function(xhr, textStatus, errorThrown) {
                  console.log(errorThrown);
                  $('.loader-container').css('display','none');
                }
            });
