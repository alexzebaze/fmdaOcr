{% extends 'base.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css">
    
    <style type="text/css">
        
        thead th{text-align: center;text-align: center;}
        .send-facture, .formReglement{display: none;}
        .ibox-title{padding: 26px 90px 8px 15px}
        .ibox-tools{display: flex;align-items: center;justify-content: flex-end;margin-bottom: 7px;}
        table.dataTable tfoot th, table.dataTable tfoot td{border-top: 1px solid #e7eaec;text-align: center; font-weight: 600;font-size: 15px;    padding-bottom: 3rem;}
        .total-bl{
            margin: 8px 0 16px 0;
            color: #000;
            font-weight: 600;
            text-align: center;
        }
        .btnAttachDevis, .formZip{display: none;}
        .cree-bl{display: none;}
        .loader-container{display: none;align-items: center;justify-content: center;}
        #extSubmitFixed{display: none;}
    </style>
{% endblock %}
{% block breadcrumb %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h1>Liste des factures</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Facturations</strong>
                </li>
            </ol>
        </div>
    </div>

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'flashes.html.twig' %}
            <div class="ibox">
                <div class="ibox-content">
                    {{ include('facturation/filter.html.twig') }}
                </div>
            </div>
            <div class="ibox ">
                <div class="ibox-title" style="position: relative;">
                    <h5>
                        <span class="btn-config-colonne">
                            <i class="fa fa-cog"></i>
                        </span>
                        Liste des factures</h5> <b>({{achats|length}} Documents)</b>
                    <div class="ibox-tools">
                        <a href="{{ path('email_document_preview_list', {'dossier':'facturation'}) }}" class="btn btn-primary">
                            ({{countDocAttentes ? countDocAttentes.nb : 0}})
                            En attente
                        </a>
                        <a href="{{ path('facturation_add') }}" class="btn btn-primary" style="margin-left: 12px;">
                            <i class="fa fa-plus"></i>
                            Importer
                        </a>
                        <a href="{{path('facturation_add_manuel')}}" class="btn btn-info" style="color: #fff!important">
                            <i class="fa fa-plus"></i> Ajouter
                        </a>
                        <button type="submit" class="btn btn-primary send-facture" style="margin-left: 12px; margin-right: 12px;">Envoyer la facture</button>
                        <button type="button" class="btn btn-primary formReglement" style="margin-right: 6px;" data-toggle="modal" data-target="#myModal">
                          Règlement
                        </button>
                        <a href="" class="btn btn-success cree-bl" style="color: #fff!important;">Crée bl</a>
                        <button type="button" class="btn btn-primary btnAttachDevis" style="margin-left: 6px;">
                          Lier un devis
                        </button>

                        <form method="POST" action="{{path('facturation_zip')}}" class="formZip" style="margin-left: 5px">
                            <input type="hidden" name="list-facture-id">
                            <button type="submit" class="btn btn-warning">Zip</button>
                        </form>
                    </div>

                    <div class="column-container">
                        <div class="column-content">
                            <form method="POST" action="{{path('update_toggle_column')}}">
                                <input type="hidden" name="page" value="FACTURE_FOURNISSEUR">
                                <input type="hidden" name="redirect" value="facturation_list">
                                <div class="column-list">
                                    {% for column in columns  %}
                                    <div class="column-item">
                                        <label class="column-label">
                                            <input class="column-check" type="checkbox" {% if columnsVisibileId|length and column.id in columnsVisibileId|keys %}checked{% endif %} name="configs[{{column.id}}]">
                                            <span class="column-libelle">{{ tabColumns[column.cle] }}</span>
                                        </label>
                                    </div>
                                    {% endfor %}
                                </div>
                                <br>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <h1 class="total-bl text-center">{{full_month|capitalize}}</h1>
                    <h2 class="total-bl">TTC: <span>{{ montant['prixttc'] ? montant['prixttc']|number_format(2, ',', '') : "0" }}€</span> / HT: <span>{{ montant['sum_ht'] ? montant['sum_ht']|number_format(2, ',', '') : "0" }}€</span></h2>


                    {% if 'MONTANT_TTC' in columnsVisibileId  %}
                        <h2 class="total-bl">
                            Achat HT: <span>{{ montantCodeComptaAchat['sum_ht'] ? montantCodeComptaAchat['sum_ht']|number_format(2, ',', '') : "0" }}€</span> /

                            Charges HT: <span>{{ montantCodeComptaCharge['sum_ht'] ? montantCodeComptaCharge['sum_ht']|number_format(2, ',', '') : "0" }}€</span>
                        </h2>
                    {% endif %}

                    {% if 'MONTANT_TTC' in columnsVisibileId  %}
                        <h2 class="total-bl"> Montant Impayé: <span>{{ montant['prixttc'] ? (montant['prixttc'] - montantPaye['prixttc'])|number_format(2, ',', '') : "0" }}€</span> </h2>

                        <h2 class="total-bl"> Montant Due à Echéance TTC : <span>{{ montantDue['prixttc'] ? (montantDue['prixttc'])|number_format(2, ',', '') : "0" }}€</span> </h2>
                    {% endif %}

                    <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="chk-parent" value="">
                            </th>
                            {% if 'DOCUMENT_PDF' in columnsVisibileId  %}
                                <th class="{% if 'DOCUMENT_PDF' not in columnsVisibileId  %}removeColumn{% endif %}">DOC</th>
                            {% endif %}

                            {% if 'DATE_CREATION' in columnsVisibileId  %}
                            <th class="{% if 'DATE_CREATION' not in columnsVisibileId  %}removeColumn{% endif %}">
                            DATE_CREATION</th>
                            {% endif %}

                            {% if 'DOCUMENT_ID' in columnsVisibileId  %}
                            <th class="{% if 'DOCUMENT_ID' not in columnsVisibileId  %}removeColumn{% endif %}">DOCUMENT_ID</th>{% endif %}

                            {% if 'FOURNISSEUR' in columnsVisibileId  %}
                            <th></th>
                            <th class="{% if 'FOURNISSEUR' not in columnsVisibileId  %}removeColumn{% endif %}">
                                FOURNISSEUR
                            </th>
                            {% endif %}

                            {% if 'CHANTIER' in columnsVisibileId  %}
                            <th class="{% if 'CHANTIER' not in columnsVisibileId  %}removeColumn{% endif %}">CHANTIER</th>
                            {% endif %}

                            {% if 'LOT' in columnsVisibileId  %}
                            <th class="{% if 'LOT' not in columnsVisibileId  %}removeColumn{% endif %}">LOT</th>
                            {% endif %}

                            {% if 'MONTANT_TTC' in columnsVisibileId  %}
                            <th class="{% if 'MONTANT_TTC' not in columnsVisibileId  %}removeColumn{% endif %}">TTC</th>
                            {% endif %}

                            {% if 'TVA' in columnsVisibileId  %}
                            <th class="{% if 'TVA' not in columnsVisibileId  %}removeColumn{% endif %}">TVA</th>
                            {% endif %}

                            {% if 'MONTANT_HT' in columnsVisibileId  %}
                            <th class="{% if 'MONTANT_HT' not in columnsVisibileId  %}removeColumn{% endif %}">HT</th>
                            {% endif %}

                            {% if 'REGLEMENT' in columnsVisibileId  %}
                            <th class="{% if 'REGLEMENT' not in columnsVisibileId  %}removeColumn{% endif %}">PAYE</th>
                            {% endif %}

                            {% if 'DUE_DATE' in columnsVisibileId  %}
                            <th class="{% if 'DUE_DATE' not in columnsVisibileId  %}removeColumn{% endif %}">ECHEANCE</th>
                            {% endif %}

                            {% if 'DEVIS_FOURNISSEUR' in columnsVisibileId  %}
                                <th class="{% if 'DEVIS_FOURNISSEUR' not in columnsVisibileId  %}removeColumn{% endif %}">DEVIS</th>
                            {% endif %}

                            {% if 'CODE_COMPTA' in columnsVisibileId  %}
                                <th class="{% if 'CODE_COMPTA' not in columnsVisibileId  %}removeColumn{% endif %}" style="width: 150px;">CODE_COMPTA</th>
                            {% endif %}

                            {% if 'COMPTA' in columnsVisibileId  %}
                                <th class="{% if 'COMPTA' not in columnsVisibileId  %}removeColumn{% endif %}">COMPTA</th>
                            {% endif %}

                            {% if 'TRIABLE' in columnsVisibileId  %}
                                <th class="{% if 'TRIABLE' not in columnsVisibileId  %}removeColumn{% endif %}">TRIABLE</th>
                            {% endif %}

                            {% if 'AUTOMATIQUE' in columnsVisibileId  %}
                                <th class="{% if 'AUTOMATIQUE' not in columnsVisibileId  %}removeColumn{% endif %}">AUTO</th>
                            {% endif %}
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for achat in pager.currentPageResults %}
                            <tr class='text-center' style="{% if achat.getBlValidation %}color:green {% endif %}">
                                <td>
                                    <input type="checkbox" data-fournisseur="{{ achat.fournisseur is not null ? achat.fournisseur.id : '' }}" data-ttc="{{achat.getPrixttc|number_format(2, '.', '') }}" class="check-fc" name="blCheck" value="{{achat.id}}" data-prixht="{{achat.getPrixht|number_format(2, '.','') }}" data-valid="{{ achat.getBlValidation is not null ? 1 : 0 }}" 
                                    data-reglement="{% if achat.reglement is null %}0{% else %}{{achat.reglement.getMontantReglement }}{% endif %}"
                                    {% if achat.reglement is not null %}
                                    data-documents="{% for regl in achat.reglement.getDocumentSerialize %}{{regl}}##{% endfor %}" {% endif %} data-chantier="{{achat.chantier is not null ? achat.chantier.chantierId : ''}}"
                                    >
                                </td>

                                {% if 'DOCUMENT_PDF' in columnsVisibileId  %}
                                <td>
                                    {% if achat.getDocumentFile %} 
                                    <span class="showDocument" data-file="/uploads/achats/facturation/{{achat.getDocumentFile}}" style="cursor: pointer;"><img src="//ssl.gstatic.com/docs/doclist/images/mediatype/icon_3_pdf_x16.png"></span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'DATE_CREATION' in columnsVisibileId  %}
                                <td data-sort="{{ achat.facturedAt|date('d/m/Y') }}">
                                    {{ achat.facturedAt is not null ? achat.facturedAt|date('d/m/Y') : '' }}
                                </td>
                                {% endif %}

                                {% if 'DOCUMENT_ID' in columnsVisibileId  %}
                                <td>{{achat.getDocumentId}}</td>
                                {% endif %}

                                {% if 'FOURNISSEUR' in columnsVisibileId  %}
                                <td>
                                    {% if achat.fournisseur.logo %}
                                        <span style="margin-right: 4px">
                                            <img class="rounded-circle" src="/uploads/logo_fournisseur/{{achat.fournisseur.logo}}">
                                        </span>
                                    {% endif %}
                                </td>
                                <td>                                        
                                    {{ achat.fournisseur is not null ? achat.fournisseur.nom : '' }}
                                </td>
                                {% endif %}

                                {% if 'CHANTIER' in columnsVisibileId  %}
                                <td>
                                    {% if achat.chantier %} 
                                        {{ achat.chantier is not null ? achat.chantier.nameentreprise : '' }}
                                    {% else %}
                                        <span class="btn" onclick="addChantier({{achat.id}})"><i class="fa fa-plus"></i></span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'LOT' in columnsVisibileId  %}
                                <td>{{achat.lot is not null ? achat.lot.lot : ''}}</td>
                                {% endif %}
                                
                                {% if 'MONTANT_TTC' in columnsVisibileId  %}
                                <td>{{ achat.prixttc|number_format(2, ',', '') }}{{ achat.devise.symbol }}</td>
                                {% endif %}
                                
                                {% if 'TVA' in columnsVisibileId  %}
                                <td>
                                    {% set ht = achat.getPrixht is null ? 0 : achat.getPrixht %} 
                                    {% set dividende = (ht is null or ht == 0) ? 1 : ht %} 

                                    {% set partE = ((achat.prixttc - ht) / dividende * 100)|round(0, 'floor') %}
                                    {% set partD = ((achat.prixttc - ht) / dividende * 100) - partE %}

                                    {% if partE == 0 %}
                                        <span style="color: orange">0</span>
                                    {% else %}
                                        {% if partE == 5  and (partD <= 0.8 and partD >= 0.2) %}
                                           <span style="color: green">5.5%</span> 
                                        {% elseif partE == 20  and (partD <= 0.3) %}
                                            <span style="color: green">20%</span>
                                        {% elseif partE == 19  and (partD >= 0.7) %}
                                            <span style="color: green">20%</span>
                                        {% elseif partE == 10  and (partD <= 0.3) %}
                                            <span style="color: green">10%</span>
                                        {% elseif partE == 9  and (partD >= 0.3) %}
                                            <span style="color: green">10%</span>
                                        {% else %}
                                            <span style="color: red">{{((achat.prixttc - ht) / dividende * 100)|number_format(2, ',', ' ')}}%</span>
                                        {% endif %}
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'MONTANT_HT' in columnsVisibileId  %}
                                <td>{{ achat.getPrixht|number_format(2, ',', '') }}{{ achat.devise.symbol }}</td>
                                {% endif %}
                                
                                {% if 'REGLEMENT' in columnsVisibileId  %}
                                <td>
                                    {% if achat.reglement is null %}
                                        <span  style="font-size: 18px;color: #ef0a0a;"><i class="fas fa-times"></i><span style="visibility: hidden;">X</span></span>
                                    {% elseif achat.reglement.getRestantEncaisse %}
                                        <span style="font-size: 18px;color: orange;" 
                                            {% if achat.reglement is not null and achat.reglement.getDocumentSerialize is not empty %}
                                                class="showDocument"
                                                data-file="/uploads/reglement/entreprise_{{achat.reglement.entreprise.id}}/{{achat.reglement.getDocumentSerialize[0]}}"
                                            {% endif %}
                                            ><i class="fa fa-check"></i><span style="visibility: hidden;">V</span></span>
                                    {% else %}
                                        <span style="font-size: 18px;color: green;" 
                                        {% if achat.reglement is not null and achat.reglement.getDocumentSerialize is not empty %}
                                            class="showDocument"
                                                data-file="/uploads/reglement/entreprise_{{achat.reglement.entreprise.id}}/{{achat.reglement.getDocumentSerialize[0]}}"
                                            {% endif %}
                                            ><i class="fa fa-check"></i>
                                        <span style="visibility: hidden;">V</span></span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'DUE_DATE' in columnsVisibileId  %}
                                <td data-sort="{{ achat.dueAt|date('d/m/Y') }}">
                                    {{ achat.dueAt is not null ? achat.dueAt|date('d/m/Y') : "" }}
                                </td>
                                {% endif %}

                                {% if 'DEVIS_FOURNISSEUR' in columnsVisibileId  %}
                                <td>
                                    {% if achat.getDevisPro is not null %}
                                        <span style="display: none;">V</span>
                                        <span class="showDocument" data-file="/uploads/devis/{{achat.getDevisPro.getDocumentFile}}" style="cursor: pointer;"><img src="//ssl.gstatic.com/docs/doclist/images/mediatype/icon_3_pdf_x16.png"></span>
                                    {% else %}
                                        <span style="display: none;">X</span>
                                        <span class="openDevis" data-fournisseur="{{ achat.fournisseur is not null ? achat.fournisseur.id : '' }}" data-chantier="{{achat.chantier is not null ? achat.chantier.getChantierId : '' }}" data-id="{{achat.id}}" style="cursor: pointer;">
                                            <i class="fas fa-times" style="font-size: 18px;color: #ef0a0a;"></i>
                                        </span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'CODE_COMPTA' in columnsVisibileId  %}
                                <td>
                                    <span style="visibility: hidden;">{{achat.getCodeCompta}}</span>
                                    <form method="POST" action="{{path('facturation_attach_code_compta')}}" name="attachCodeCompta">
                                        <select name="code_compta" class="form-control codeComptaSelect" style="text-align-last: center;">
                                            <option disabled selected></option>
                                            {% for key,code in tab_code_compta %}
                                                <option value="{{key}}" {% if achat.getCodeCompta == key %}selected{% endif %} style="height: 35px;">{{code}}</option>
                                            {% endfor %}
                                        </select>
                                        <input type="hidden" name="facture_id" value="{{achat.id}}">
                                    </form>
                                </td>
                                {% endif %}

                                {% if 'COMPTA' in columnsVisibileId  %}
                                <td>
                                    {% if achat.getExportCompta is null %}
                                        <span  style="font-size: 18px;color: #ef0a0a;"><i class="fas fa-times"></i><span style="visibility: hidden;">X</span></span>
                                    {% else %}
                                        <span style="font-size: 18px;color: green;"><i class="fa fa-check"></i>
                                        <span style="visibility: hidden;">V</span></span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'TRIABLE' in columnsVisibileId  %}
                                <td style="position: relative;">
                                    {% if (achat.fournisseur is not null) and (achat.fournisseur.paiement is not null ) %}
                                        <img src="{{asset('images/logo_paiement/'~achat.fournisseur.paiement.image)}}" style="height: 33px;">
                                        <span style="visibility: hidden; position: absolute;">{{achat.fournisseur.paiement.image}}</span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                {% if 'AUTOMATIQUE' in columnsVisibileId  %}
                                <td>
                                    {% if achat.automatique %}
                                        <span  style="font-size: 18px;color: green;"><i class="fas fa-check"></i><span style="visibility: hidden;">v</span></span>
                                    {% else %}
                                        <span style="visibility: hidden;">X</span>
                                    {% endif %}
                                </td>
                                {% endif %}

                                <td>
                                    <a href="{{ path('facturation_edit', {'facturationId': achat.id} ) }}"><i class="far fa-edit"></i></a>
                                    <a onclick="return confirm('Etes-vous sur de vouloir supprimer cette achat ?')"
                                       href="{{ path('facturation_delete', {'facturationId': achat.id} ) }}"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="34">Aucune achat enregistrée</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    </div>

                        {% if pager.haveToPaginate %}
                            {{ pagerfanta(pager, 'my_template') }}
                        {% endif %}

                    {% if 'MONTANT_TTC' in columnsVisibileId  %}
                    <div style="width: 100%; height: 200px;margin-bottom: 45px;">

                        <canvas id="myChart"></canvas>
                    </div>
                    {% endif %}
                    
                    <div id="modalQ" class="modal fade bs-example-modal-sm modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                                <div class="modal-header" style="border: none;">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                                <div class="modal-body text-center" style="padding: 0px 30px 51px 30px">
                                    <form method="POST" action="{{path('facturation_send_bl')}}" name="sendFactureMail">
                                        <input type="hidden" name="list-fc-id">
                                        <div class="row">
                                            <div class="col-lg-12 form-group">
                                                <input type="email" name="email_comptable" placeholder="Email comptable" class="form-control" required value="{{emailComptableConfig}}">
                                            </div>
                                            <input type="hidden" name="submit" value="">
                                        </div>
                                        <div class="col-lg-12 form-group text-center" style="display: flex;">
                                            <button type="submit" name="submit" value="envoyer" class="btn btn-primary envoyer" style="margin-right: 8px">Envoyer</button>
                                            <button type="submit" name="submit" value="comptabilite" class="btn btn-warning comptabilite submit-comptabilite">Transfert Compta</button>
                                        </div>
                                        <div class="row export loader-container">
                                            <img src="{{asset('images/loading.gif')}}" style="width: 54px;">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="modalQ2" class="modal fade bs-example-modal-sm modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                      <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header" style="border: none;">
                                <h4 class="modal-title text-center" id="gridSystemModalLabel" style="padding-top: 27px;">document deja envoyé,<br> etes-vous sûr de vouloir le renvoyer?</h4>
                            </div>
                            <div class="modal-body text-center">
                                <form method="POST" name="sendFactureMailConf" action="{{path('facturation_send_bl')}}">
                                    <input type="hidden" name="list-fc-id">
                                    <div class="row">
                                        <div class="col-lg-12 form-group">
                                            <input type="email" name="email_comptable" placeholder="Email comptable" class="form-control" required>
                                        </div>
                                        <input type="hidden" name="submit" value="">
                                    </div>
                                    <div class="row form-group text-center" style="display: flex;justify-content: center;">
                                        <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm" style="margin-right: 8px">NON</button>
                                        <button type="submit" name="submit" value="comptabilite" class="btn btn-warning submit-comptabilite">OUI</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>  

            <div class="modal fade" id="modalDevis" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title text-center" id="myModalLabel">Attribuer un devis</h2>
                      </div>
                      <div class="modal-body" style="padding-top: 0">
                            <div class="loader-container">
                                <img src="{{asset('images/loading.gif')}}" style="width: 54px;">
                            </div>
                            <div id="listDevisContainer"></div>
                      </div>
                    </div>
                </div>
                <span id="extSubmitFixed" class="btn-small btn btn-primary" style="box-shadow: 0px 0px 10px 6px rgb(119 119 119 / 25%);position: fixed;z-index: 9999;top: 18px;"><i class="fas fa-save"></i></span>
            </div>

            <div class="modal fade" id="modalChantier" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title text-center" id="myModalLabel">Attribuer un chantier</h2>
                      </div>
                      <div class="modal-body">
                            <form method="POST" action="{{path('facturation_attribut_chantier')}}" id="chantierForm">
                                <input type="hidden" name="factureId">
                                <div class="form-group">
