                else
                    $('.cree-bl').css('display','none');
                /*if($(this).attr('data-valid') == 1)
                    $('.formReglement').css('display', 'block');*/
            }
            else{
                $('.btnAttachDevis').css('display', 'none');
                $('.formZip').css('display', 'none');
                $('.formReglement').css('display', 'none');
                $('.send-facture').css('display', 'none');
