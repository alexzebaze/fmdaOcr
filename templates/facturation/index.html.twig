            });
            $montantRE = ttc - $reglement;
            $('#reglement_montant_non_encaisse').val(ttc.toFixed(2));
            $('#reglement_montant_reglement').val($montantRE.toFixed(2));

            $('input[name=list-fc-id]').val(userCheck.join('-'));
            $('input[name=list-facture-id]').val(factureCheck.join('-'));
            $('input[name=list-elt-id]').val(userCheck.join('-'));
        });
