
<style type="text/css">
    .img-load{display: block;margin: auto;max-width: 201px;}
    label[for=outillage_image]{cursor: pointer;}
    .img-item > .img {
        max-width: 100%;
        height: 100px;
        object-fit: cover;
    }
    .list-img{
        display: flex;
        flex-wrap: wrap;
        justify-content: center
    }
    .img-item {
        margin-right: 4px;
        width: 43%;
        margin-bottom: 15px;
    }
</style>
{{ form_start(form) }}
<div class="col-lg-8">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12 form-group">
                    {{ form_label(form.nom, 'Nom') }}
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.marque, 'Marque') }}
                    {{ form_row(form.marque) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.num_serie, 'Numero serie') }}
                    {{ form_row(form.num_serie) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.modele, 'Modele') }}
                    {{ form_row(form.modele) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.gestion, 'Gestion') }}
                    {{ form_row(form.gestion) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.proprietaire, 'Proprietaire') }}
                    {{ form_row(form.proprietaire) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.mise_en_service, 'Mise en service') }}
                    {{ form_row(form.mise_en_service) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.derniere_inspection, 'Derni√®re inscription') }}
                    {{ form_row(form.derniere_inspection) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.status, 'Status') }}
                    {{ form_row(form.status) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.utilisateur, 'Utilisateur') }}
                    {{ form_row(form.utilisateur) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_label(form.note, 'Note') }}
                    {{ form_row(form.note) }}
                </div>

                <div class="col-lg-3 form-group">
                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-12 form-group">
                    {{ form_row(form.image, { 'attr': {'accept': '.png, .jpg, .jpeg, .gif'} }) }}
                    {% set image = outillage.image ? '/uploads/image_outillage/'~outillage.image : '/assets/images/loag-image.png' %}
                </div>
                <div class="col-sm-12 list-img">
                    {% if images is defined %}
                        {% for img in images %}
                        <div class="img-item" style="position: relative;">
                            <span class="delete-image" data-file="{{img}}" data-outillage="{{outillage.id}}">
                                <i class="fa fa-trash"></i>
                            </span>
                            <img class="showDocument img" data-file="/uploads/image_outillage/{{img}}" src="/uploads/image_outillage/{{img}}" class="img">
                        </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
