{% extends 'base.html.twig' %}
{% block css %}
    <style type="text/css">
       .form-control, select.form-control{
        height: 46px!important;
       }
    </style>
{% endblock %}
{% block breadcrumb %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h1>Edition Tache</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('horaire_get_detail') }}">TÃ¢ches</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>{{horaire.user.firstname}} {{horaire.user.lastname}}</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <form method="POST">
                        <div class="row">
                            <div class="col-lg-12 form-group">
                                <label>Tache</label>
                                <select name="tache" class="form-control">
                                    {% for cat in categories %}
                                        <option value="{{cat.category}}" {% if horaire.tache == cat.category|lower %} selected {% endif %}>{{cat.category}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-12 form-group">
                                <button class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


