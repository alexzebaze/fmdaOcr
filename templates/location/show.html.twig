{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ location.type }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ location.identifiant }}</td>
            </tr>
            <tr>
                <th>Utilisation</th>
                <td>{{ location.utilisation }}</td>
            </tr>
            <tr>
                <th>Debut_bail</th>
                <td>{{ location.debutBail ? location.debutBail|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin_bail</th>
                <td>{{ location.finBail ? location.finBail|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree_bail</th>
                <td>{{ location.dureeBail }}</td>
            </tr>
            <tr>
                <th>Renouvellement</th>
                <td>{{ location.renouvellement ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_paiement</th>
                <td>{{ location.datePaiement ? location.datePaiement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Periodicite</th>
                <td>{{ location.periodicite ? location.periodicite|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Generateur_loyer</th>
                <td>{{ location.generateurLoyer }}</td>
            </tr>
            <tr>
                <th>Loyer_hc</th>
                <td>{{ location.loyerHc }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">back to list</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
