{% extends 'base.html.twig' %}

{% block breadcrumb %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h1>Configuration SmsEnvoi</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <strong>SmsEnvoi</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'flashes.html.twig' %}
            <div class="ibox">
                <div class="ibox-content">
                    <form method="POST" action="{{path('config_acces_sms_send')}}">
                    	<div class="row">
						    <div class="col-lg-7 form-group">
                                <label>Username</label>
						        <input type="text" class="form-control" name="username" value="{{username is not null ? username.value : ''}}">
						    </div>
                            <div class="col-lg-7 form-group">
                                <label>Password</label>
                                <input type="text" class="form-control" name="password" value="{{password is not null ? password.value : ''}}">
                            </div>
                            <div class="col-lg-7 form-group">
                                <label>Sender</label>
                                <input type="text" class="form-control" name="sender" value="{{sender is not null ? sender.value : ''}}">
                            </div>
						    <div class="col-lg-7 form-group">
						        <button class="btn btn-primary">Enregistrer</button>
						    </div>
						</div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


